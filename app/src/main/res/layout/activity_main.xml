<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <com.geocdias.loadingbutton.LoadingButton
        android:id="@+id/loading_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:loading_button_idle_title="@string/loading_idle_title_btn"
        app:loading_button_loading_title="@string/loading_title_btn"
        app:loading_button_complete_title="@string/loading_complete_title_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
